{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "lib": [ "es6", "dom" ],
    "moduleResolution": "node",
    "typeRoots": [
      "../node_modules/@types/"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "../node_modules/**/*",
    "../server/**/*",
    "testing/**/*",
    "src/**/*.spec.ts"
  ]
}
